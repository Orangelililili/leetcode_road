https://leetcode.cn/problems/integer-break/

class Solution{
public:
    int integerBreak(int n) {
    // dp[i]表示整数i的最大拆分乘积
        vector<int> dp(n + 1, 0);
    
    // 从2开始考虑，因为整数1不能拆分
        for (int i = 2; i <= n; i++) {
            for (int j = 1; j < i; j++) {
            // 对i进行拆分，拆成j和i-j
                dp[i] = max(dp[i], max(j * (i - j), j * dp[i - j]));
            }
        }
        return dp[n];
    }
};

//直接拆分：j * (i - j)，即将 i 拆分为 j 和 i-j。
//递归拆分：j * dp[i - j]，即将 i 拆分为 j 和 i-j，然后继续递归地拆分 i-j