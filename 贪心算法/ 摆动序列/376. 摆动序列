https://leetcode.cn/problems/wiggle-subsequence/

class Solution {
public:
    int wiggleMaxLength(vector<int>& nums) {
        if (nums.size() < 2) return nums.size();
        
        int up = 1, down = 1; // up 和 down 分别表示上升序列和下降序列的最大长度
        
        for (int i = 1; i < nums.size(); ++i) {
            if (nums[i] > nums[i - 1]) {
                up = down + 1; // 如果当前元素比前一个大，则更新 up
            } else if (nums[i] < nums[i - 1]) {
                down = up + 1; // 如果当前元素比前一个小，则更新 down
            }
        }
        
        return max(up, down); // 返回较大的那个作为结果
    }
};