https://leetcode.cn/problems/happy-number/

// 无限循环，那么也就是说求和的过程中，sum会重复出现，这对解题很重要
class Solution {
public:
    int getSum(int n) {
        int sum = 0;
        while (n) {
            sum += (n % 10) * (n % 10); // 每位上的平方求和
            n = n / 10;                 // 下一位
        }
        return sum;
    }

    bool isHappy(int n) {
        unordered_set<int> result;
        // 当sum重复出现在result中，返回false
        int sum = 0;
        while (1) {
            sum = getSum(n);
            if (sum == 1) {
                return true;
            }

            if (result.find(sum) != result.end()) {
                return false;
            } else {
                result.insert(sum);
            }
            n = sum; // 再来
        }
    }
};

